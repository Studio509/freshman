#include <iostream>
using namespace std;
int main()
{
	int num[1][2];
	while (1)
	{
	cout<<"请输入系数";
	cin >> num[1][0];
	cout<<"请输入几次方";
	cin >> num[1][1];
	 if (num[1][1] > 0)
		{
		cout<<"求导后系数为"<<num[1][0]*num[1][1] << " ";
	    if (num[1][1]>1)
			{
				cout<<endl;
			 	cout<<"方数为"<<num[1][1]-1 << " ";
				cout<<endl;
			}			
		}
	 else
		{break;}
	}
	return 0;
}
