import java.util.Scanner;
public class Change {
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		  int i=0;
		  System.out.println("请输入任意一个不大于1000的正整数:");
		  Scanner input = new Scanner(System.in);
		  int n=input.nextInt();
		  while(n!=1)
		  {
		     if(n%2==0)
		      n=n/2;
		    else 
		      n=((3*n)+1)/2;
		      i++;
		    }
		    	System.out.println("把n变成1需要"+i+"步");
		      input.close();
		}
	}
